script/source = "extends CharacterBody3D

var WALK_SPEED = 2
var RUN_SPEED = 4
var JUMP_VELOCITY = 0

@export var animation_column = 0
@export var facing = 8

func _ready():
	$AnimationPlayer.play(\"walk\") # ! NOT-WORKING

# Get the gravity from the project settings to be synced with RigidBody nodes.
var gravity = ProjectSettings.get_setting(\"physics/3d/default_gravity\")

func _physics_process(delta):
	
	# Add the gravity.
	if not is_on_floor():
		velocity.y -= gravity * delta

	# Handle jump.
	if Input.is_action_just_pressed(\"ui_accept\") and is_on_floor():
		velocity.y = JUMP_VELOCITY
		
		
	var SPEED = WALK_SPEED
	
	if Input.is_key_pressed(KEY_SHIFT):
		SPEED = RUN_SPEED

	# Get the input direction and handle the movement/deceleration.
	# As good practice, you should replace UI actions with custom gameplay actions.
	var input_dir = Input.get_vector(\"ui_left\", \"ui_right\", \"ui_up\", \"ui_down\")
	var direction = (transform.basis * Vector3(input_dir.x, 0, input_dir.y)).normalized()
	if direction:
		velocity.x = direction.x * SPEED
		velocity.z = direction.z * SPEED
	else:
		velocity.x = move_toward(velocity.x, 0, SPEED)
		velocity.z = move_toward(velocity.z, 0, SPEED)
	
	update_facing(input_dir)
	update_animation()
	move_and_slide()

func update_facing(input_dir):
	if input_dir == Vector2(0,-1): # Facing away from camera
		facing = 8
	if input_dir == Vector2(0, 1): # Facing towards camera
		facing = 12
	if input_dir == Vector2(1,0): # Facing right
		facing = 10
	if input_dir == Vector2(-1,0): # Facing left
		facing = 14

func update_animation():
	$Sprite3D.frame = animation_column * 8 + facing
"


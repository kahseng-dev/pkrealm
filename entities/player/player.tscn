script/source = "extends CharacterBody3D

class_name Player

# Speed Values
const SPEED_WALK = 2
const SPEED_RUN = 4

# Sprite Properties
var sprite_facing = 12

# Key Bindings
const KEYBIND_RUN = KEY_SHIFT

func _physics_process(delta):
	handle_movement()

func handle_movement():
	var direction = Vector2.ZERO
	var speed = SPEED_WALK
	
	if Input.is_key_pressed(KEYBIND_RUN): speed = SPEED_RUN
	
	if Input.is_action_pressed(\"ui_up\"): direction = Vector2(0, -1)
	elif Input.is_action_pressed(\"ui_down\"): direction = Vector2(0, 1)
	elif Input.is_action_pressed(\"ui_left\"): direction = Vector2(-1, 0)
	elif Input.is_action_pressed(\"ui_right\"): direction = Vector2(1, 0)
	
	velocity = (transform.basis * Vector3(direction.x, 0, direction.y)).normalized() * speed
	update_sprite_facing(direction)
	move_and_slide()

func update_sprite_facing(direction):
	match direction:
		Vector2(0, 1): sprite_facing = 12 # Player Sprite is Facing Down
		Vector2(1,0): sprite_facing = 10 # Player Sprite is Facing Right
		Vector2(0,-1): sprite_facing = 8 # Player Sprite is Facing Up 
		Vector2(-1,0): sprite_facing = 14 # Player Sprite is Facing Left
	$Sprite3D.frame = sprite_facing
"

